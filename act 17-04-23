#include <16F877a.h>
#device ADC = 10
#use delay(crystal = 20000000)
#FUSES NOWDT, NOBROWNOUT, NOLVP, HS

#include <lcd_c.c>
#include <kbd4x4_d.c>
#include <getNum16.c>

#use STANDARD_IO(E)

#define PWM_PIN PIN_E0

#define carga 61

int1 esAltoPWM = 0;
int16 porcentaje;
int16 CARGA_BAJO;
int16 CARGA_ALTO;

#INT_TIMER1
void timer1_isr(){
   if(esAltoPWM == 1){
      set_timer1(CARGA_BAJO);
      output_low(PWM_PIN);
      esAltoPWM = 0;
   }else{
      set_timer1(CARGA_ALTO);
      output_high(PWM_PIN);
      esAltoPWM = 1;
   }
   if(porcentaje == 100){
      output_high(PWM_PIN);
   }else if(porcentaje == 0){
      output_low(PWM_PIN);
   }
}

void main()
{
   // Inicializar pines
   lcd_init();
   kbd_init();

   setup_timer_1(T1_INTERNAL | T1_DIV_BY_8);

   enable_interrupts(INT_TIMER1);
   enable_interrupts(GLOBAL);
   
      
   printf(lcd_putc,"\fCA %lu\nCB %lu",CARGA_ALTO,CARGA_BAJO);

   output_low(PWM_PIN);
   set_timer0(CARGA_BAJO);  

       while(TRUE){
        
        printf(lcd_putc,"\fIngre porc: %lu",porcentaje);
         
         porcentaje = get_num_lcd(4,2);
         
   CARGA_BAJO = (int16)((65536.0 * (float)porcentaje / 100.0));
   CARGA_ALTO = 65536 - CARGA_BAJO;
  }
}
